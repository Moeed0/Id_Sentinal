    "api_endpoints": {
        "base_url": "https://api.idsentinel.com/v1",
        "auth": {
            "login": "POST /auth/login",
            "register": "POST /auth/register",
            "refresh": "POST /auth/refresh",
            "logout": "POST /auth/logout"
        },
        "cnic": {
            "register": "POST /cnic/register",
            "activities": "GET /cnic/activities",
            "lock": "POST /cnic/lock",
            "unlock": "POST /cnic/unlock"
        },
        "document": {
            "analyze": "POST /document/analyze",
            "history": "GET /document/history"
        },
        "leak": {
            "check": "POST /leak/check",
            "subscribe": "POST /leak/subscribe"
        },
        "photo": {
            "verify": "POST /photo/verify",
            "track": "POST /photo/track",
            "watermark": "POST /photo/watermark"
        },
        "app": {
            "scan": "POST /app/scan",
            "report": "POST /app/report"
        },
        "sms": {
            "analyze": "POST /sms/analyze",
            "report": "POST /sms/report"
        }
    },
